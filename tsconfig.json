{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node", "jsonwebtoken", "cookie-parser", "bcrypt"],
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist", 
        "rootDir": "./src",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}